{
  "name": "bootstrap-rn",
  "version": "0.4.6",
  "description": "Bootstrap RN provides Bootstrap components for React Native.",
  "author": "Markus Wetzel <markuswetzel@gmx.net>",
  "license": "MIT",
  "keywords": [
    "react",
    "native",
    "react-native",
    "bootstrap",
    "ui",
    "style"
  ],
  "repository": "https://github.com/examunity/bootstrap-rn.git",
  "bugs": {
    "url": "https://github.com/examunity/bootstrap-rn/issues"
  },
  "main": "lib/module/index.js",
  "module": "lib/module/index.js",
  "source": "src/index.ts",
  "types": "./lib/typescript/index.d.ts",
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "bob build",
    "prepare": "packsy validate && yarn build",
    "lint": "packsy pre-commit && yarn check-types"
  },
  "files": [
    "src",
    "lib"
  ],
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@react-aria/focus": "^3.21.3",
    "@rn-primitives/hooks": "^1.3.0",
    "@rn-primitives/portal": "^1.3.0",
    "css-to-react-native": "^3.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "@types/react-dom": "~19.1.10",
    "packsy": "^0.2.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-builder-bob": "^0.40.17",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.0",
    "typescript": "~5.9.2"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19",
    "react-native": ">=0.78",
    "react-native-safe-area-context": ">=5",
    "react-native-svg": ">=15",
    "react-native-web": ">=0.20"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "packsy pre-commit"
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      "typescript"
    ]
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 8"
  }
}
